{
  "name": "zorroa-js-curator",
  "description": "Frontend for the Zorroa Archivist, part of the ZVI platform",
  "version": "0.40.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zorroa/zorroa-js-curator.git"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "scripts": {
    "prepush": "npm run test:lint && npm run test:unit",
    "start": "npx forever -f ./server/app.js",
    "start:docker": "docker run -p 80:8081 -p 443:8443 -e 'NODE_ENV=production' -e WHITELABEL_CONFIGURATION -e ARCHIVIST_API_URL -e 'CURATOR_PORT_SECURE=8443' --init -u node -m 1g --memory-swap 4g zorroa-js-curator",
    "start:dev": "CURATOR_PORT_SECURE=8443 CURATOR_PORT=8081 NODE_ENV=development ARCHIVIST_API_URL='https://qa.pool.zorroa.com' node ./server/app.js",
    "deploy": "docker build -m 4g -t zorroa-js-curator .",
    "build": "npx webpack --config build/webpack.config.js --progress --colors",
    "build:docker": "npx webpack --config build/webpack.config.js",
    "build:https-cert": "openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -days 365 -nodes -subj '/CN=localhost'",
    "test": "npm run test:lint && npm run test:unit -- --ci --runInBand --bail",
    "test:watch": "npx jest --verbose --watch",
    "test:lint": "npx eslint ./",
    "test:unit": "npx jest",
    "update-fonts": "src/assets/fonts/zorroa-icons/update-fonts.bash",
    "preview-fonts": "src/assets/fonts/zorroa-icons/preview-fonts.bash"
  },
  "author": "zorroa.com",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "8.X.X",
    "npm": "^6.3.0"
  },
  "jest": {
    "testURL": "https://localhost/8081",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "<rootDir>/tests/StyleStub.js",
      "^.+\\.(jpg|png|jpeg|svg)$": "<rootDir>/tests/MediaStub.js"
    },
    "collectCoverage": true
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-1": "^7.0.0",
    "axios-mock-adapter": "1.9.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "brace": "^0.11.1",
    "css-loader": "^1.0.0",
    "enzyme": "3.4.0",
    "enzyme-adapter-react-15": "1.0.6",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "2.5.0",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "husky": "0.14.3",
    "install": "0.11.0",
    "jest-cli": "^23.6.0",
    "jest-localstorage-mock": "2.2.0",
    "json": "9.0.6",
    "json-loader": "^0.5.7",
    "node-sass": "^4.9.3",
    "pdfjs-dist": "1.10.97",
    "prettier": "1.10.2",
    "react-ace": "^6.2.0",
    "react-test-renderer": "15.6.2",
    "redux-mock-store": "1.5.3",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.3.0"
  },
  "dependencies": {
    "axios": "0.14.0",
    "camel-case": "3.0.0",
    "classnames": "2.2.5",
    "copy-to-clipboard": "3.0.8",
    "debug": "2.6.9",
    "decamelize": "https://registry.npmjs.org/decamelize/-/decamelize-1.2.0.tgz",
    "downloadjs": "1.4.7",
    "dropbox": "2.5.12",
    "ease-component": "1.0.0",
    "express": "4.16.3",
    "forever": "^0.15.3",
    "http-proxy-middleware": "0.18.0",
    "latlon-geohash": "1.1.0",
    "lru-cache": "4.1.1",
    "moment": "2.21.0",
    "prop-types": "15.6.2",
    "react": "15.6.2",
    "react-addons-css-transition-group": "15.6.2",
    "react-addons-transition-group": "15.6.2",
    "react-axis": "0.2.5",
    "react-dom": "15.6.2",
    "react-json-tree": "0.10.9",
    "react-keydown": "1.9.4",
    "react-mapbox-gl": "0.17.0",
    "react-masonry-component": "6.0.2",
    "react-measure": "1.4.7",
    "react-redux": "4.4.8",
    "react-router-dom": "4.2.2",
    "react-widgets": "3.5.0",
    "recharts": "0.18.0",
    "redux": "3.7.2",
    "redux-multi": "0.1.12",
    "redux-promise": "0.5.3",
    "redux-thunk": "2.2.0",
    "url-parse": "^1.4.3",
    "zxcvbn": "^4.4.2"
  }
}
